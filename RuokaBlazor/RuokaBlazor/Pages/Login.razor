@page "/"
@inject NavigationManager Navigation


<EditForm Model="loginModel" OnValidSubmit="HandleLogin" class="login-layout">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label for="username">Käyttäjätunnus</label>
        <InputText id="username" @bind-Value="loginModel.Username" class="form-control" />
    </div>

    <div>
        <label for="password">Salasana</label>
        <InputText id="password" @bind-Value="loginModel.Password" type="password" class="form-control" />
    </div>

    <div style="margin-bottom: 15px;"></div>

    <button type="submit" class="btn btn-primary">Kirjaudu</button>
    
    <div style="margin-bottom: 15px;"></div>

    <div>
        <button @onclick="GoToSignup" class="btn btn-link">Rekisteröidy</button>
    </div>
    
</EditForm>

<p>@message</p>

@code {
    private LoginModel loginModel = new();
    private string message = string.Empty;

    private void HandleLogin()
    {
        // Simppeli esimerkki kirjautumislogiikasta
        if (loginModel.Username == "admin" && loginModel.Password == "123")
        {
            message = "Login successful!";
            Navigation.NavigateTo("/home");

        }
        else
        {
            message = "Invalid username or password.";
        }
    }

    public class LoginModel
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
    private void GoToSignup()
    {
        Navigation.NavigateTo("/signup");
    }
}

